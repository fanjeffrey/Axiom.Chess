<UserControl x:Class="SilverChess.ChessPieceUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="50" Height="50" MouseLeftButtonDown="UserControl_MouseLeftButtonDown" MouseMove="UserControl_MouseMove" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
    <Canvas x:Name="PieceCanvas" Width="50" Height="50">
		<Grid>
			<Ellipse Height="50" Width="50" Fill="#cdcdcd" Stroke="Black"></Ellipse>
			<Ellipse x:Name="PieceEllipse" Height="46" Width="46" Fill="#cdcdcd" Stroke="Black"></Ellipse>
            <TextBlock x:Name="PieceText" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Microsoft YaHei"  FontWeight="bold" FontSize="24" Foreground="Black" Text="" ></TextBlock>
        </Grid>
    </Canvas>
</UserControl>
