<UserControl x:Class="SilverChess.XiangQiUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="1000" Height="600">
    <Grid x:Name="RootGrid" Width="900" Height="550" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="KilledPiecesPanel1" Grid.Column="1" Background="DarkCyan" Visibility="Collapsed">            
        </StackPanel>
		<StackPanel x:Name="KilledPiecesPanel2" Grid.Column="2" Background="DarkBlue"  Visibility="Collapsed">
        </StackPanel>
        <Canvas x:Name="BoardCanvas" Grid.Column="0"></Canvas>
        <Canvas x:Name="PieceCanvas" Grid.Column="0"></Canvas>
    </Grid>
</UserControl>
